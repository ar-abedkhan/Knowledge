                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/commerceCard"
                android:padding="@dimen/_3sdp"
                android:background="@color/gray_50_backgroundd"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:src="@drawable/commers1"
                    android:id="@+id/commerceImg"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Commerce"
                    android:textSize="@dimen/_15sdp"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/sky_text"
                    android:layout_gravity="center"
                    android:paddingBottom="@dimen/_3sdp"
                    />


            </LinearLayout>



        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_90sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            app:layout_constraintTop_toBottomOf="@id/myProfile"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/artsCard"
                android:background="@color/gray_50_backgroundd"
                android:padding="@dimen/_3sdp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:src="@drawable/humanities"
                    android:id="@+id/artsImg"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
