                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/artsDepShow"
                >
            </LinearLayout>

        </LinearLayout>

